.tilt 
  overflow hidden
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  margin 0 auto

.tilt__back,
.tilt__front 
  width calc( 100% - 4rem)
  height calc( 100% - 4rem)
  background-position 50% 50%
  background-repeat no-repeat
  background-size cover
  backface-visibility hidden
  margin 2rem



.tilt__back 
  position relative

.tilt__front
  position absolute
  top 0
  left 0
  


