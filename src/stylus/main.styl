@import url(http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,900italic,900,700italic&subset=latin,cyrillic)

$font-family-base = 'Roboto', sans-serif

@import nib
@import bootstrap

    
@import 'lib/tilteffect'   




$color_secondary = #fff
$anim-time = .5s


body
  font-weight 300
  font-smoothing antialiased
  text-rendering optimizeLegibility
  


.item  
  
  &-grid
    // Empty

  &-container
    // Empty

  &-link
    display block
    position relative
    margin 5% 
    
    &:hover
    &:focus
      .item
        &-text
          opacity 1   
        
          &-noimg
            .item-table
              box-shadow inset 0 0 0 10px #e2cf51

  &-box
    padding 15% 
    
    &-img
      width 100%
          
      &-absolute
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin 0 auto
    
  &-text
    position absolute
    top 0
    left 0   
    bottom 0
    
    opacity 0
    transition all .2s ease-in
  
    &-inner
      display table-cell
      vertical-align middle
      
    &-noimg
      position relative
      opacity 1  
      
      .item-table
        box-shadow inset 0px 0px 0px 6px #e2cf51
        
    &-desc
      color #64686a 
      
    &-title 
      font-weight 300   
    
  &-table
    display table
    width 100%
    height 100%
    text-align center
    color #262526
    background rgba(255, 255, 255, .5)
    padding 10%
    transition all .2s ease-in
      
 

@import 'partials/menu'  